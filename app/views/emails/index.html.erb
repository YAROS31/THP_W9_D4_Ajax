<div style="width:85%; margin:30px auto">
  <h1>The cheapest Gmail version</h1>

  <!-- Liens Bootstrap -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <!-- Tableau Bootstrap -->

  </br>
  <%= link_to "recevoir un email", emails_path, method: :post, class: "btn btn-primary", remote: true %>
  </br>
  </br>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">email list</th>
        <th scope="col">email content</th>
      </tr>
    </thead>
    <tbody id="email-list">
      <% @emails.each do |email| %>
        <tr>
          <td><a href="emails/<%=email.id%>"><%= email.object%></a></td>
          <td><a class="btn btn-danger" data-method="DELETE" href="<%=email_path(@emails[0].id)%>">X</a></td>
        </tr>
        <% end %>

        <div id="showEmail">
        </div>
    </tbody>
  </table>


</div>